import React, {Component} from 'react';

class FormElem extends Component {
	render() {
		const {
			name,
			placeholder,
			type,
			values,
			handleChange,
			handleBlur,
			errors,
			touched,
		} = this.props;

		return (
				<input
					id={name}
					placeholder={placeholder}
					type={type}
					value={values[name]}
					onChange={handleChange}
					onBlur={handleBlur}
					className={
						errors[name] && touched[name]
							? 'text-input error'
							: 'text-input'
					}
				/>
		);
	}
}

export default FormElem;
